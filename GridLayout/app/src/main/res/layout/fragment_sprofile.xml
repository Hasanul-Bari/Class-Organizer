<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SProfileFragment">

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/myColor"
        android:textColor="#FFFFFF"
        android:text="\nStudent Profile\n "
        android:gravity="center"



        android:id="@+id/Day"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"

        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E2E0E0"

        >


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E2E0E0"
            android:padding="10dp"
            android:orientation="vertical">

            <!-- TODO: Update blank fragment layout -->

            <LinearLayout
                android:padding="10dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_bg2"


                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Name : "
                    android:textSize="25sp"
                    android:textColor="@color/myColor"

                    />

                <TextView

                    android:id="@+id/SnameID"

                    android:paddingLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"

                    android:textSize="20sp">

                </TextView>


            </LinearLayout>



            <LinearLayout
                android:padding="10dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_bg2"


                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Student ID : "

                    android:textSize="25sp"
                    android:textColor="@color/myColor"

                    />

                <TextView
                    android:id="@+id/SID_id"

                    android:paddingLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"

                    android:textSize="20sp">

                </TextView>


            </LinearLayout>

            <LinearLayout
                android:padding="10dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_bg2"


                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Department : "
                    android:textSize="25sp"
                    android:textColor="@color/myColor"

                    />

                <TextView
                    android:id="@+id/SdeptID"

                    android:paddingLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"

                    android:textSize="20sp">

                </TextView>


            </LinearLayout>

            <LinearLayout
                android:padding="10dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_bg2"


                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Contact no : "
                    android:textSize="25sp"
                    android:textColor="@color/myColor"

                    />

                <TextView
                    android:id="@+id/SContactId"

                    android:paddingLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"

                    android:textSize="20sp">

                </TextView>


            </LinearLayout>

            <LinearLayout
                android:padding="10dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_bg2"


                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Email : "
                    android:textSize="25sp"
                    android:textColor="@color/myColor"

                    />

                <TextView
                    android:id="@+id/SEmailid"

                    android:paddingLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:textSize="20sp">

                </TextView>


            </LinearLayout>









        </LinearLayout>




    </ScrollView>





</LinearLayout>